<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--按钮颜色-->
        <item name="colorControlNormal">@color/White</item>
        <!--文字颜色-->
        <item name="android:textColorPrimary">@color/White</item>

    </style>
    <style name="FruitActivityTheme" parent="AppTheme">

    </style>

    <style name="ClickableTextView">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>
    <!--TabLayout字体样式-->
    <style name="TabTextSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TabTextSize_1" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>
    <style name="ClickableLayout">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>
<!--toolBar按钮的颜色-->
    <style name="toolBar">
        <!--按钮颜色-->
        <item name="colorControlNormal">#030405</item>
        <!--文字颜色-->
        <item name="android:textColorPrimary">@color/White</item>
    </style>


</resources>
